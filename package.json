{
    "name": "design.payex.com",
    "version": "0.1.5",
    "description": "PayEx DesignGuide",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development WEBPACK=devserver webpack-dev-server",
        "start:prod": "cross-env NODE_ENV=production WEBPACK=devserver webpack-dev-server",
        "build": "npm run lint && cross-env NODE_ENV=development webpack",
        "build:prod": "npm run lint && cross-env NODE_ENV=production PUBLIC_URL=design.payex.com webpack",
        "test": "cross-env NODE_ENV=test jest",
        "test:update": "npm test -- -u",
        "lint": "eslint src/ && stylelint src/less/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PayEx/design.payex.com.git"
    },
    "keywords": [],
    "author": "PayEx",
    "license": "No License",
    "bugs": {
        "url": "https://github.com/PayEx/design.payex.com/issues"
    },
    "homepage": "https://github.com/PayEx/design.payex.com#readme",
    "jest": {
        "verbose": false,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/polyfills/**/*.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "json",
            "lcov"
        ],
        "setupFiles": [
            "./test/shim.js",
            "./test/jest.config.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "dependencies": {
        "@fortawesome/fontawesome": "^1.1.3",
        "@fortawesome/fontawesome-free-brands": "^5.0.6",
        "@fortawesome/react-fontawesome": "0.0.17",
        "clipboard": "^2.0.0",
        "js-beautify": "^1.7.5",
        "normalize.css": "^8.0.0",
        "prismjs": "^1.11.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-prism": "^4.3.2",
        "react-router-dom": "^4.2.2"
    },
    "devDependencies": {
        "autoprefixer": "^7.2.5",
        "babel-core": "^6.26.0",
        "babel-jest": "^22.2.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "clean-webpack-plugin": "^0.1.18",
        "cross-env": "^5.1.3",
        "css-loader": "^0.28.9",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.1",
        "eslint": "^4.17.0",
        "eslint-plugin-jest": "^21.7.0",
        "eslint-plugin-node": "^6.0.0",
        "eslint-plugin-react": "^7.6.1",
        "extract-text-webpack-plugin": "^3.0.2",
        "favicons-webpack-plugin": "0.0.7",
        "file-loader": "^1.1.6",
        "html-webpack-plugin": "^2.30.1",
        "image-webpack-loader": "^4.0.0",
        "jest": "^22.2.1",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "postcss-loader": "^2.1.0",
        "react-test-renderer": "^16.2.0",
        "style-loader": "^0.20.1",
        "stylelint": "^9.1.1",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-standard": "^18.2.0",
        "webpack": "^3.10.0",
        "webpack-bundle-analyzer": "^2.11.1",
        "webpack-dev-server": "^2.11.1"
    }
}
